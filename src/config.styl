@import url('~purecss/build/forms-min.css')

body,
html {
    padding: 0
    height: 100%
    font-size: 14px
    font-family: 'PT Sans'
}

html {
    overflow: hidden
    box-sizing: border-box
    background-color: transparent
}

*,
*:before,
*:after {
    box-sizing: inherit
}

table {
    width: 100%
    border-collapse: collapse
    table-layout: fixed
}

thead {
    border-bottom: 1px solid #DED7BE
}

th,
td {
    overflow: hidden
    padding: .25rem .5rem
    text-overflow: ellipsis
}

button {
    padding: .5rem 1rem
    border: 1px solid #72d
    background: linear-gradient(to bottom, #314, #415)
    box-shadow: inset 0 1px 0 #102
    color: #fff
    cursor: pointer
}
