$ var encounter = input.encounter
div#header.orange
  if(!input.isActive) -- waiting for data...
  else
    span if(input.settings.time) class={green: input.isActive && input.settings.highlight, white: (!input.isActive) || (!input.settings.highlight)} -- [${encounter.duration}]&nbsp;
    if(input.settings.target) -- ${encounter.title}:&nbsp;
    span.blue if(input.settings.stats || input.settings.strongest)
      if(input.settings.stats)
        if(input.settings.stats.hit) -- ${encounter.ENCDPS} DPS&nbsp;
        if(input.settings.stats.hit && input.settings.stats.heal) -- /&nbsp;
        if(input.settings.stats.heal) -- ${encounter.ENCHPS} HPS&nbsp;
      if(input.settings.stats && input.settings.strongest) -- -&nbsp;
      if(input.settings.strongest)
        if(input.settings.strongest.hit) -- ${encounter.maxhit}&nbsp;
        if(input.settings.strongest.hit && input.settings.strongest.heal) -- /&nbsp;
        if(input.settings.strongest.heal) -- ${encounter.maxheal}&nbsp;
